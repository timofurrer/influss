{
  "manifest_version": 3,
  "name": "Influss Clipper",
  "version": "1.0.0",
  "description": "Minimalist website clipper to be consumed by your favorite RSS reader.",
  "permissions": [
    "storage",
    "activeTab",
    "contextMenus"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "browser_specific_settings": {
    "gecko": {
      "id": "{f2313271-d6ed-4843-8157-00b56c01f40a}"
    }
  },

  "action": {
    "default_icon": {
      "48": "icons/influss-48.png",
      "96": "icons/influss-96.png"
    },
    "default_title": "Read it later with Influss",
    "default_popup": "popup.html"
  },

  "background": {
    "scripts": ["background.js"],
    "type": "module"
  },

  "options_ui": {
    "page": "options.html",
    "browser_style": true,
    "mobile_only": false
  },

  "icons": {
    "48": "icons/influss-48.png",
    "96": "icons/influss-96.png"
  }
}
